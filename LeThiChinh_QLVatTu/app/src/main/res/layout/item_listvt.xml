<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_mavt"
        android:text="Mã vật tư"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_width="100dp"
        android:layout_height="137dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_ten"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên vật tư: "
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tv_nsx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nhà sản xuất: "
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tv_namsx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Năm sản xuất: "
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tv_soluong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Số lượng: "
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tv_dongia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đơn giá: "
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>